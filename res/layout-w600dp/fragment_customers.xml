<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/recyclerview_customers"
    android:layout_height="match_parent"
    tools:context=".ui.customer.CustomerListFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/datatable_customers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="GridLayoutManager"
        app:spanCount="4"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabDeleteCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|end"
        android:layout_margin="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Xóa khách hàng"
        android:src="@drawable/baseline_restore_from_trash_24"
        app:backgroundTint="#EB0404"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@android:color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>
